<!DOCTYPE html>
<html lang="pt-PT">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pesquisar Eventos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="http://localhost:3009">SD</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="http://localhost:3009">Inserir Evento<span class="sr-only">(atual)</span></a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" href="pesquisarEvento">Pesquisar Evento</a>
                </li>
          </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <!-- FormulÃ¡rio de pesquisa -->
        <form action="/pesquisarEvento" method="get">
            <div class="form-group">
                <label for="nome">Nome do Evento:</label>
                <input type="text" id="nome" name="nome" class="form-control">
            </div>
            <div class="form-group">
                <label for="idade">Idade:</label>
                <input type="number" id="idade" name="idade" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Pesquisar</button>
        </form>

        <!-- Tabela de eventos -->
        <table class="table table-striped mt-5">
            <thead>
                <tr>
                    <th>Nome do Evento</th>
                    <th>Idade</th>
                </tr>
            </thead>
            <tbody>
                <% eventos.forEach(evento => { %>
                    <tr>
                        <td><%= evento.nome %></td>
                        <td><%= evento.idade %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
